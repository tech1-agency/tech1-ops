name: actions-gmail-v3-ops

on:
  workflow_call:
    inputs:
      to:
        required: true
        type: string
        description: 'action-send-mail@v3 usage: {{ with.to }}'
      previous_job_status:
        required: false
        type: string
        description: 'action-send-mail@v3 usage: {{ with.subject }}'

jobs:
  send:
    runs-on: ubuntu-latest
    steps:
      - name: Gmail Send V3
        if: always()
        uses: dawidd6/action-send-mail@v3
        with:
          server_address: smtp.gmail.com
          server_port: 465
          username: ${{ secrets.SMTP_GMAIL_USERNAME }}
          password: ${{ secrets.SMTP_GMAIL_PASSWORD }}
          subject: '${{ inputs.previous_job_status || job.status }}: ${{ github.repository }} Â» ${{ github.ref_name }}, ${{ github.workflow }} # ${{ github.run_number }}'
          to: ${{ inputs.to }}
          from: ${{ vars.SMTP_GMAIL_FROM }}
          html_body: |
            <b>Actions</b>: https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }}
